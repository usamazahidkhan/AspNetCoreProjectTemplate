				<label class="form-label">Email address</label>
				<input asp-for="Input.Email" type="email" class="form-control" placeholder="your@email.com" autocomplete="off">

				<span asp-validation-for="Input.Email" class="text-danger small"></span>
			</div>

			<div class="mb-2">
				<label class="form-label">
					Password
					<span class="form-label-description">
						<a href="/ForgotPassword">I forgot password</a>
					</span>
				</label>
				<input asp-for="Input.Password" type="password" class="form-control" placeholder="Your password">

				<span asp-validation-for="Input.Password" class="text-danger small"></span>
			</div>
